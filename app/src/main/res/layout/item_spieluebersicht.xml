<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/spielUebersichtItem"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="6dip"
    android:layout_marginBottom="5dp">

    <!-- spielerNamedataItem -->

    <TextView
        android:id="@+id/spielItemNameView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/rot_spieler_farbe"
        android:layout_below="@+id/eigenerSpielerFarbeButtonView"
        android:hint="B"
        android:gravity="center"
        android:textSize="40sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginRight="20dp"/>

    <TextView
        android:id="@+id/spielItemWaehrungView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="@string/waehrungMonopolyDollar"
        android:textSize="30sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:id="@+id/spielItemCapitalView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:ellipsize="marquee"
        android:text="Kapital"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
/>
</RelativeLayout>
